<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mih.demo.Mappers.ScoreMapper">
    <resultMap id="Score" type="Mih.demo.Modules.Score">
        <result column="SId" jdbcType="VARCHAR" property="studentId" />
        <result column="CId" jdbcType="VARCHAR" property="classId" />
        <result column="score" jdbcType="DECIMAL" property="score" />
    </resultMap>
    
    <select id="getScoreByStudentId" resultType="INT">
        select score from sc where SId = #{SId} and CId = #{CId}
    </select>

    <update id="updateScoreByStudentId">
        update sc set score = #{score} where SId = #{SId} and CId = #{CId}
    </update>
</mapper>